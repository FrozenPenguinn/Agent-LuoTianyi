{
  "llm": {
    "provider": "siliconflow",
    "model": "deepseek-ai/DeepSeek-V2.5",
    "api_key": "$SILICONFLOW_API_KEY",
    "base_url": "https://api.siliconflow.cn/v1",
    "temperature": 0.7,
    "max_tokens": 1000,
    "top_p": 0.9
  },
  "knowledge": {
    "vector_store": {
      "type": "chroma",
      "persist_directory": "./data/embeddings",
      "collection_name": "luotianyi_knowledge"
    },
    "graph_store": {
      "type": "neo4j",
      "uri": "bolt://localhost:7687",
      "username": "neo4j",
      "password": "$NEO4J_PASSWORD"
    },
    "embedding": {
      "model": "text-embedding-3-small",
      "batch_size": 32,
      "max_length": 512
    }
  },
  "agent": {
    "persona_file": "config/persona.json",
    "memory": {
      "type": "buffer",
      "size": 10
    },
    "response": {
      "max_tokens": 500,
      "stream": true
    },
    "retrieval": {
      "top_k": 5,
      "similarity_threshold": 0.7
    }
  },
  "prompt": {
    "template_dir": "prompts"
  },
  "conversation": {
    "memory_type": "buffer",
    "memory": {
      "size": 10,
      "summary_length": 200
    }
  },
  "multimodal": {
    "tts": {
      "enabled": false,
      "engine": "mock",
      "model_path": "./models/luotianyi_voice"
    },
    "live2d": {
      "enabled": false,
      "controller": "mock",
      "model_path": "./models/luotianyi_live2d"
    }
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 1,
    "cors_origins": ["*"]
  },
  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": true,
    "file": "./logs/agent.log",
    "rotation": "100 MB",
    "retention": "30 days"
  },
  "development": {
    "debug": false,
    "reload": false,
    "profile": false
  }
}
