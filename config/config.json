{
  "llm": {
    "provider": "siliconflow",
    "model": "Pro/deepseek-ai/DeepSeek-V3",
    "api_key": "$SILICONFLOW_API_KEY",
    "base_url": "https://api.siliconflow.cn/v1",
    "temperature": 0.7,
    "max_tokens": 1000,
    "top_p": 0.9
  },
  "knowledge": {
    "vector_store": {
      "type": "chroma",
      "persist_directory": "./data/embeddings",
      "collection_name": "luotianyi_knowledge"
    },
    "graph_store": {
      "type": "neo4j",
      "uri": "bolt://localhost:7687",
      "username": "neo4j",
      "password": "$NEO4J_PASSWORD"
    },
    "embedding": {
      "model": "text-embedding-3-small",
      "batch_size": 32,
      "max_length": 512
    }
  },
  "agent": {
    "persona_file": "config/persona.json",
    "memory": {
      "type": "buffer",
      "size": 10
    },
    "response": {
      "max_tokens": 500,
      "stream": true
    },
    "retrieval": {
      "top_k": 5,
      "similarity_threshold": 0.7
    }
  },
  "prompt": {
    "template_dir": "prompts/chat_agent_prompts"
  },
  "conversation": {
    "memory_type": "summary",
    "memory": {
      "size": 10,
      "max_show_round": 4,
      "max_store_round": 8,
      "summary_length": 200,
      "summary_llm": {
        "provider": "siliconflow",
        "model": "Qwen/Qwen3-32B",
        "api_key": "$SILICONFLOW_API_KEY",
        "base_url": "https://api.siliconflow.cn/v1",
        "temperature": 0.7,
        "max_tokens": 1000,
        "top_p": 0.9            
      },
      "summary_prompt": "prompts/summary_agent_prompts/summary_prompt.json"
    }
  },
  "multimodal": {
    "tts": {
      "enabled": false,
      "engine": "gptsovits",
      "model_path": "./models/luotianyi_voice"
    },
    "live2d": {
      "enabled": false,
      "model_path": "./models/luotianyi_live2d",
      "actions": {
        "happy": "motion_happy.mtn",
        "sad": "motion_sad.mtn",
        "surprised": "motion_surprised.mtn"
      }
    }
  },
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "workers": 1,
    "cors_origins": ["*"]
  },
  "logging": {
    "level": "INFO",
    "format": "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}",
    "file": "./logs/agent.log",
    "rotation": "100 MB",
    "retention": "30 days"
  },
  "development": {
    "debug": false,
    "reload": false,
    "profile": false
  }
}
